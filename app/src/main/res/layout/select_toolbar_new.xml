<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/blue"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/select_toolbar_tv_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/line_left"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/select_toolbar_line_bg" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_line_select"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_rig"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/select_toolbar_tv_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/line_rig"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/select_toolbar_line_bg" />

    </LinearLayout>
</LinearLayout>