<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/gray_toolbar">

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/left_right_margin"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_height"
        android:layout_toRightOf="@id/left_img"
        android:layout_marginLeft="16dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/toolbar_title_size"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:padding="0.5dp"
        android:layout_centerInParent="true"
        android:background="@drawable/white_rect_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_left"
            style="@style/apartment_toolbar_selectors"
            android:background="@drawable/apartment_toolbar_selector_left" />

        <TextView
            android:id="@+id/toolbar_right"
            style="@style/apartment_toolbar_selectors"
            android:background="@drawable/apartment_toolbar_selector_right" />
    </LinearLayout>
</RelativeLayout>
