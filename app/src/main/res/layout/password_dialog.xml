<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" 
    android:paddingLeft="@dimen/main_padding"
    android:paddingRight="@dimen/main_padding"
    android:paddingTop="@dimen/main_padding">
    <TextView
        android:id="@+id/title_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/big_character"
        android:gravity="center_horizontal"/>
	<TextView
        android:id="@+id/title_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/middle_character"
        android:gravity="center_horizontal"
      	/>
	<EditText 
	    android:id="@+id/password"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="20dp"
	    android:padding="5dp"
	    android:textSize="@dimen/middle_character"
	    android:textColor="@color/black"
	    android:hint="请输入登录密码"
	    android:textColorHint="@color/gray_character"
	    android:background="@drawable/edit_password_edittext_bg"
	    android:inputType="textPassword"/>
	<View
	    android:layout_marginTop="15dp"
	    android:layout_height="@dimen/line_height"
	    android:layout_width="match_parent"
	 	android:background="@color/gray_background"
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/cancel"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:textColor="@color/blue"
	        android:textSize="@dimen/big_character"
	        android:background="@drawable/item_pressd_bg"
	        android:gravity="center"
	        android:text="取消"/>
	    <View android:layout_width="@dimen/line_height"
	        android:layout_height="match_parent"
	        android:background="@color/gray_background"/>
	    
	    <TextView
	        android:id="@+id/sure"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:textColor="@color/blue"
	        android:textSize="@dimen/big_character"
	        android:background="@drawable/item_pressd_bg"
	        android:gravity="center"
	        android:text="确定"/>
	</LinearLayout>
</LinearLayout>
