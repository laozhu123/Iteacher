<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back_deep"
    android:orientation="vertical"
    tools:context="com.li.zjut.iteacher.activity.checkin.newactivity.CheckHistoryActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <View
        style="@style/deep_line"
        android:layout_marginTop="@dimen/activity_vertical_margin" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/last_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/last_time"/>
        <TextView
            android:id="@+id/tv_last_check"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/last_time"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/last_check"
            android:textColor="@color/txt_black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/item_arrow" />
    </RelativeLayout>

    <View style="@style/deep_line" />

    <View
        style="@style/deep_line"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/select_cur_class"
        android:textColor="#aaaaaa"
        android:textSize="16sp" />

    <View style="@style/deep_line" />

    <ExpandableListView
        android:id="@+id/expand_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:childDivider="@null"
        android:divider="@null" />

    <View style="@style/deep_line" />
</LinearLayout>
