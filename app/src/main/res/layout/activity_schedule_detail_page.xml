<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back_deep">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    style="@style/deep_line"
                    android:layout_marginTop="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/teacher_detail_text"
                        android:text="@string/time" />


                    <TextView
                        android:id="@+id/tv_date"
                        style="@style/teacher_detail_edit"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:paddingRight="23dp"
                        android:text="请选择(日期)"
                        android:textColor="@color/txt_black"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/line_gray" />

                    <TextView
                        android:id="@+id/tv_minute"
                        style="@style/teacher_detail_edit"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:paddingRight="23dp"
                        android:text="请选择(时分)"
                        android:textColor="@color/txt_black"
                        android:textSize="14sp" />
                </LinearLayout>

                <View style="@style/deep_line" />

                <View
                    style="@style/deep_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/teacher_detail_text"
                        android:text="@string/alarm_info" />

                    <EditText
                        android:id="@+id/content"
                        style="@style/teacher_detail_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="23dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/task_edit_bg"
                        android:gravity="left"
                        android:hint="@string/please_input_alarm"
                        android:minHeight="80dp"
                        android:padding="3dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <View style="@style/deep_line" />

                <View
                    style="@style/deep_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="75dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/teacher_detail_text"
                            android:text="@string/tag"
                            android:textSize="14sp" />


                        <com.li.zjut.iteacher.widget.WordWrapView
                            android:id="@+id/tags"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:background="@color/white" />


                        <ImageView
                            android:id="@+id/add_tag"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginRight="5dp"
                            android:padding="7dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_add" />
                    </LinearLayout>


                </LinearLayout>

                <View style="@style/deep_line" />

                <View
                    style="@style/deep_line"
                    android:layout_marginTop="@dimen/activity_vertical_margin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/teacher_detail_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repeat" />


                    <TextView
                        android:id="@+id/repeat"
                        style="@style/teacher_detail_edit"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:paddingRight="23dp"
                        android:text="请选择(必选)"
                        android:textColor="@color/txt_black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/save"
        style="@style/common_big_btn"
        android:layout_alignParentBottom="true"
        android:text="@string/save"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/normal_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="1dp" />

        <TextView
            android:id="@+id/modify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/big_btn_bg"
            android:gravity="center"
            android:text="@string/modify"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>

