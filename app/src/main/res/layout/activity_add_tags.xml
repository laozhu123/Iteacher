<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_back_deep"
    android:orientation="vertical"
    tools:context="com.li.zjut.iteacher.activity.imteacher.AddTagsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <View
        style="@style/deep_line"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/black_17"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:text="标签" />

        <EditText
            android:id="@+id/et_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/gray_character"
            android:textSize="15sp"
            android:background="@null"
            android:hint="输入标签"
            android:paddingLeft="5dp" />
        <View
            android:id="@+id/v_blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <View style="@style/deep_line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="right"
        android:text="输入后点击空白处"
        android:textColor="@color/gray_character" />
    
    <com.li.zjut.iteacher.widget.WordWrapView
        android:id="@+id/view_wordwrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>
</LinearLayout>
